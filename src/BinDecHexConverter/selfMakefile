
all: bdhconvert
#	make -C Converter

bdhconvert: main.o
	g++ -Wall main.o out/* -o out/bdhconv
	rm main.o
	
main.o: main.cpp ConvertFactory.o
	g++ -Wall -c main.cpp -o main.o

ConvertFactory.o: init
	make -C Converter
	g++ -Wall -c NumberBaseConverterFactory.cpp -o out/ConvertFactory.o

init:
	rm -rf out

clean:
	$(RM) -rf out
	$(RM) *.o
